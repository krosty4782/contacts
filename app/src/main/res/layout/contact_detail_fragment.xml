<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="@dimen/margins"
        android:paddingBottom="@dimen/margins"
        android:paddingRight="@dimen/margins"
        android:paddingLeft="@dimen/margins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#EEEEEE">

        <ImageView
            android:id="@+id/contactPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/contactContainer"
            android:layout_below="@id/contactPicture"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contactFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactUpdatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

</RelativeLayout>